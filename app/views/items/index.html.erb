<div class="container">
  <div class="row">
    <% if current_user.try(:admin?) %>
      <h2>モノ一覧（管理者）</h2>
    <% else %>
      <h2>モノ一覧</h2>
    <% end %>

    <%= link_to '断捨離診断する', new_item_path, class: "btn btn-outline-info mr-3 mt-3" %>
    <%= link_to 'フラグ一覧を見る', flags_path, class: "btn btn-outline-info mt-3" %>
  </div>


  <div class="table table-hover">
    <table>
      <thead>
        <tr>
          <th>ユーザーネーム</th>
          <th>名前</th>
          <th>カテゴリー</th>
          <th>ステータス</th>
          <th>更新日</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.user.name %></td>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
        <td><%= item.status %></td>
        <td><%= item.updated_at.strftime('%Y/%m/%d') %></td>
        <td><%= link_to '詳細を見る / 再診断', item_path(item.id), class: "btn btn-outline-dark" %></td>
        <td><%= link_to '編集', edit_item_path(item.id), class: "btn btn-outline-dark" %></td>
        <td><%= link_to '削除', item, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-dark" %></td>
      </tr>
    <% end %>
    </table>
  <h4>カテゴリー別グラフ</h4>
  <%= pie_chart @chart %>
  </div>

</div>
