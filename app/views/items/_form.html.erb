<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= @item.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid m">
    <form class="form-horizontal">
      <div class="form-group">
          <%= form.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= form.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :image %>
        <script type="text/javascript">
          $(function() {
            function readURL(input) {
              if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                  $('#image_prev').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
              }
            }
            $("#item_image").change(function(){
              readURL(this);
            });
          });
        </script>
        <%= image_tag @item.image.url, id: :image_prev, width: '200' %>
        <%= form.file_field :image, id: :item_image %>
      </div>

      <div class="form-group">
          <%= form.label :comment, class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= form.text_area :comment, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
          <%= form.label :category, "カテゴリー", class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= form.select :category, Item.categories.keys, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
          <%= form.label :status, "ステータス", class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= form.select :status, Item.statuses.keys, class: "form-control" %>
        </div>
      </div>

      <%= form.submit '登録して診断する' %>

    </form>
    <div class="mt-3">
      <%= link_to "モノ一覧画面にもどる", items_path, class: "btn btn-secondary text-white" %>
    </div>
  </div>

<% end %>
