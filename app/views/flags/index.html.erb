<h1>フラグ一覧</h1>
<p><%= notice %></p>

<%= link_to '断捨離診断する', new_item_path %>

<table>
  <tr>
    <th>ユーザーネーム</th>
    <th>名前</th>
    <th>カテゴリー</th>
    <th>ステータス</th>
    <th>更新日</th>
    <th colspan="3"></th>
  </tr>
<% @flag.each do |flag| %>
  <% if current_user == flag.user %>
  <tr>
    <td><%= flag.item.user.name %></td>
    <td><%= flag.item.name %></td>
    <% flag.item.categories.each do |category| %>
      <td><%= category.name %></td>
    <% end %>
    <td><%= flag.item.status %></td>
    <td><%= flag.item.updated_at %></td>
    <td><%= link_to '詳細', item_path(flag.item.id) %></td>
    <td><%= link_to '編集', edit_item_path(flag.item.id) %></td>
    <td><%= link_to '削除', flag.item, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
  </tr>
  <% end %>
<% end %>
</table>